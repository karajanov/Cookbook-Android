<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_recipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".UpdateRecipeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline26"
        app:layout_constraintEnd_toStartOf="@+id/guideline24"
        app:layout_constraintStart_toStartOf="@+id/guideline23"
        app:layout_constraintTop_toTopOf="@+id/guideline25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_title"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                app:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/edit_text_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/insert_title"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/checkBox_keep_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keep_current" />

            <TextView
                android:id="@+id/text_view_update_prep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_preptime"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                app:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/edit_text_update_prep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/insert_prep"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/checkBox_keep_prep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keep_current" />


            <TextView
                android:id="@+id/text_view_update_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cuisine"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text_update_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/insert_cuisine"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/checkBox_keep_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keep_current" />

            <TextView
                android:id="@+id/text_view_update_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text_update_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/insert_category"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/checkBox_keep_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keep_current" />

            <TextView
                android:id="@+id/text_view_update_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_update_image"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Button
                    android:id="@+id/btn_clear_image"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_update_instr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instructions"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text_ml_update_instr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/enter_instructions"
                android:inputType="textMultiLine"
                android:maxLength="800" />

            <Button
                android:id="@+id/btn_reset_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_instructions" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_update_measurements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measurements"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_view_ms_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open_form" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_update_measurements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/linear_layout_update_ms_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_update_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredient"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_view_update_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_text_update_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/insert_quantity"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:maxLines="1" />

                <CheckBox
                    android:id="@+id/checkBox_quantity_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/none" />

                <TextView
                    android:id="@+id/text_view_update_consistency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/consistency"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_text_update_consistency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/insert_consistency"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:maxLines="1" />

                <CheckBox
                    android:id="@+id/checkBox_consistency_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/none" />

                <Button
                    android:id="@+id/btn_update_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/confirm" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/update" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>